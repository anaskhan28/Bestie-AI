{
    "manifest_version": 3,
    "name": "Bestie",
    "version": "1.0",
    "description": "Extension that makes your work easy!",
    "permissions": ["activeTab"],

    "icons": {
      "16": "./icon.png",
      "32": "./icon.png",
      "48": "./icon.png",
      "128": "./icon.png"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action":{
      "default_popup": "popup.html"
    }
     

    
  }

  